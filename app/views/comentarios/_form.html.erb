<%= form_for([@produto, @produto.comentarios.build]) do |f| %>
	<div class="field">
		<%= f.label :nick %><br />
		<%= f.text_field :nick %>
	</div>
	<div class="field">
		<%= f.label :corpo %><br />
		<%= f.text_area :corpo, :size => "100x5" %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>